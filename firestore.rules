rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Agents collection
    match /agents/{agentId} {
      // Users can read and write their own agents
      allow read, write: if isAuthenticated() && isOwner(resource.data.userId);
      allow create: if isAuthenticated() && isOwner(request.resource.data.userId);
    }

    // Documents collection
    match /documents/{documentId} {
      // Users can read and write their own documents
      allow read, write: if isAuthenticated() && isOwner(resource.data.userId);
      allow create: if isAuthenticated() && isOwner(request.resource.data.userId);
    }

    // Users collection (optional, for storing user metadata)
    match /users/{userId} {
      allow read, write: if isAuthenticated() && isOwner(userId);
    }

    // Jobs collection (background workflows)
    match /jobs/{jobId} {
      // Users can create their own jobs
      allow create: if isAuthenticated() && isOwner(request.resource.data.userId);
      // Users can read and update their own jobs
      allow read, update: if isAuthenticated() && isOwner(resource.data.userId);
    }

    // Workflows collection
    match /workflows/{workflowId} {
      allow read, write: if isAuthenticated() && isOwner(resource.data.userId);
      allow create: if isAuthenticated() && isOwner(request.resource.data.userId);
    }

    // Files collection
    match /files/{fileId} {
      // Users can read and write their own files
      allow read, write: if isAuthenticated() && isOwner(resource.data.userId);
      allow create: if isAuthenticated() && isOwner(request.resource.data.userId);
    }
  }
}
